{
  "manifest_version": 3,
  "name": "POST Request Interceptor",
  "version": "1.0",
  "description": "Intercepts and modifies POST request bodies",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html"
  }
}